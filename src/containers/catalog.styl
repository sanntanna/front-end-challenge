@import '../helpers/css/common.styl'

body
    background-color $weber
    font-family $font

@media $small-only
    .wrapper
        padding 55px 0 0 0
    
    .container
        width 100%
        display inline-grid
        grid-gap 20px
        grid-template-columns repeat(auto-fit, minmax(250px, 1fr))

@media $large-only
    .wrapper
        padding 0 6rem
        max-width 2560px
        margin-top 130px